<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/home_trending_view_banner"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/home_featured_backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/home_header" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient" />

        </FrameLayout>

    <ImageView
        android:id="@+id/home_trending_view_poster"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:src="@drawable/poster"
        app:layout_constraintBottom_toBottomOf="@id/home_trending_view_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />

    <TextView
        android:id="@+id/home_trending_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Movie Title"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/home_trending_view_banner"
        app:layout_constraintLeft_toRightOf="@id/home_trending_view_poster"
        app:layout_constraintTop_toTopOf="@id/home_trending_view_banner"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/home_trending_view_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="100%"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/home_trending_view_poster"
        app:layout_constraintLeft_toRightOf="@id/home_trending_view_poster"
        app:layout_constraintTop_toBottomOf="@id/home_trending_view_title"
        app:layout_constraintVertical_bias="1" />

    <TextView
        android:id="@+id/home_trending_view_description"
        app:layout_constraintTop_toBottomOf="@id/home_trending_view_banner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/variation1BackgroundDark"
        android:text="@string/placeholder_movie_description"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_trending_movies_container"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scrollbars="none"
        android:layout_marginHorizontal="0dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/home_trending_view_description"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>