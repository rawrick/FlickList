<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/home_trending_view_banner"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/home_featured_backdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ImageViewRoundedCorners" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient" />

    </FrameLayout>

    <ImageView
        android:id="@+id/home_trending_view_poster"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@id/home_trending_view_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />

    <TextView
        android:id="@+id/home_trending_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/home_trending_view_banner"
        app:layout_constraintLeft_toRightOf="@id/home_trending_view_poster"
        app:layout_constraintTop_toTopOf="@id/home_trending_view_banner"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/home_trending_view_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/home_trending_view_poster"
        app:layout_constraintLeft_toRightOf="@id/home_trending_view_poster"
        app:layout_constraintTop_toBottomOf="@id/home_trending_view_title"
        app:layout_constraintVertical_bias="1" />

    <TextView
        android:id="@+id/home_trending_view_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rc_home_textview"
        android:paddingHorizontal="8dp"
        android:paddingTop="36dp"
        android:text=""
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/home_trending_view_banner" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_trending_movies_container"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginVertical="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/home_trending_view_description"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>